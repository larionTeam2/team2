<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @picture.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @picture.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.fullview.url %>
</p>

<h1>Comments</h1>
<% @picture.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment </h2>
<%= form_with(model: [ @picture, @picture.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Delete', @picture, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', my_profile_index_url %>
