
<%= link_to 'Delete', @picture, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', my_profile_index_url %>

<!DOCTYPE html>
<head>
    <meta charset="utf-8">
     <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> 
</head>
<body>
    <div class="w3-row", style="padding-top: 5em">
        <div class="w3-col m12 l8", style="padding-left: 0.1em; padding-right: 0.1em">  
                    <%= image_tag @picture.image.fullview.url , width: "100%", height: "auto"  %>
        

        </div>
        <div class="w3-col m12 l4", style="padding-left: 2em; padding-right: 0.1em">
            <h1>Comments</h1>
            <div class="vertical-menu", style="height: 40em; overflow-y: auto">
                
                    <% @picture.comments.each do |comment| %>
 
                <p>   
                    <strong><%= comment.commenter %></strong>
                    :
                    <p><%= comment.body %></p>
                    
                </p>
                <% end %>
            </div>
            <div class="w3-card-2">
              <%= form_with(model: [ @picture, @picture.comments.build ], local: true) do |form| %>
                
                <p>
                    <%= form.label Comment %><br>
                    <%= form.text_field :body %>
                </p>
                
                <% end %>
            </div>
        </div>
    </div>
</body>
