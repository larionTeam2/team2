<!DOCTYPE html>
<html>
<title></title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<style>
body,h1,h2,h3,h4,h5,h6 {font-family: "Raleway", sans-serif}
</style>
<body class="w3-light-grey w3-content" style="max-width:1600px">

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar"><br>
  <div class="w3-container">
    <a href="#" onclick="w3_close()" class="w3-hide-large w3-right w3-jumbo w3-padding w3-hover-grey" title="close menu">
      <i class="fa fa-remove"></i>
    </a>
    
    <div class="w3-round" style="width: 45%">
      <!-- avatar here -->
      <% @myprofile.each do |profile| %>
        <%= image_tag profile.image.avatar.url %>
      <% end %>
    </div>
    <h4><b> 
     
    <!-- User name here -->
        <% @myprofile.each do |profile| %>
        <%= profile.name %>
    <% end %>

    </b></h4>
    <p class="w3-text-grey"> <%=current_user.email%> </p>
  </div>

  <div class="w3-bar-block">
    <div class="w3-bar-item w3-button w3-padding w3-text-teal">
    <i class="fa fa-th-large fa-fw w3-margin-right"></i>&nbsp<%= link_to "HOME", root_path %>
    </div>

    <a href="#about" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fa fa-user fa-fw w3-margin-right"></i>ABOUT</a> 

    <a href="#contact" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fa fa-envelope fa-fw w3-margin-right"></i>CONTACT</a>

    <% if @myprofile.present? %>
      <%= link_to "EDIT MY PROFILE" , edit_profile_path(@user), :class => "w3-bar-item w3-button w3-padding" %>
      <%else%>
        <%= link_to "ADD INFO", new_profile_path, :class => "w3-bar-item w3-button w3-padding" %>
    <%end%>
    
    <%= link_to "SIGN OUT" , destroy_user_session_path , method: :delete, :class => "w3-bar-item w3-button w3-padding"%>
    

    
  </div>
  <div class="w3-panel w3-large">
    <i class="fa fa-facebook-official w3-hover-opacity"></i>
    <i class="fa fa-instagram w3-hover-opacity"></i>
    <i class="fa fa-snapchat w3-hover-opacity"></i>
    <i class="fa fa-pinterest-p w3-hover-opacity"></i>
    <i class="fa fa-twitter w3-hover-opacity"></i>
    <i class="fa fa-linkedin w3-hover-opacity"></i>
  </div>
</nav>

<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px">
  <!-- Header -->
  <header id="portfolio">
    
    <% @myprofile.each do |f| %>
      <%= image_tag f.image.avatar.url , :class => "w3-circle w3-right w3-margin w3-hide-large w3-hover-opacity", :style => "width:65px;" %>
    <%end%>
    <span class="w3-button w3-hide-large w3-xxlarge w3-hover-text-grey" onclick="w3_open()"><i class="fa fa-bars"></i></span>
    <div class="w3-container">
    <h1><b>View it!</b></h1>
    <div class="w3-section w3-bottombar w3-padding-16">
      <span class="w3-margin-right">Option:</span> 
      <!--
      <button class="w3-button w3-black">ALL</button>
      -->
      <%= button_to "Upload", new_picture_url , :class => "w3-button w3-white w3-hide-small"%>
     
  </header>

    <!-- First Photo Grid-->
    <% if @picture.count == 0 %>      
    <h4 class="alert alert-success" style="color: deepskyblue;">You need to upload image</h4>      
  <% else %> 
        <% @picture.each do |picture| %>        
            <%= link_to image_tag(picture.image.thumb.url), picture %>      
        <% end %>      
    <% end %>
 

    
  <% @myprofile.each do |f| %>
  <div class="w3-container w3-padding-large" style="margin-bottom:32px">
    <h4><b>About Me</b></h4>
    <p>
      <%= f.about %>
    </p>
    <hr>
    
  </div>

  <!-- Contact Section -->
  
  <div class="w3-container w3-padding-large w3-grey">
    <h4 id="contact"><b>Contact Me</b></h4>
    <div class="w3-row-padding w3-center w3-padding-24" style="margin:0 -16px">
      <div class="w3-third w3-dark-grey">
        <p><i class="fa fa-envelope w3-xxlarge w3-text-light-grey"></i></p>
        <p><%= current_user.email %></p>
      </div>
      <div class="w3-third w3-teal">
        <p><i class="fa fa-map-marker w3-xxlarge w3-text-light-grey"></i></p>
        <p><%= f.address %></p>
      </div>
      <div class="w3-third w3-dark-grey">
        <p><i class="fa fa-phone w3-xxlarge w3-text-light-grey"></i></p>
        <p><%= f.phone %></p>
      </div>
    </div>
    
  </div>
  <%end%>


  <div class="w3-black w3-center w3-padding-24">Powered by Team Two<a href="https://www.w3schools.com/w3css/default.asp" title="" target="_blank" class="w3-hover-opacity"></a></div>

</div>

  
      <!--
      <button class="w3-button w3-white"><i class="fa fa-diamond w3-margin-right"></i>Design</button>
      <button class="w3-button w3-white w3-hide-small"><i class="fa fa-photo w3-margin-right"></i>Photos</button>
      <button class="w3-button w3-white w3-hide-small"><i class="fa fa-map-pin w3-margin-right"></i>Art</button>
      -->
  
    

  
  
  
  
  </div>

  <!-- Pagination -->
  <!--
  <div class="w3-center w3-padding-32">
    <div class="w3-bar">
      <a href="#" class="w3-bar-item w3-button w3-hover-black">«</a>
      <a href="#" class="w3-bar-item w3-black w3-button">1</a>
      <a href="#" class="w3-bar-item w3-button w3-hover-black">2</a>
      <a href="#" class="w3-bar-item w3-button w3-hover-black">3</a>
      <a href="#" class="w3-bar-item w3-button w3-hover-black">4</a>
      <a href="#" class="w3-bar-item w3-button w3-hover-black">»</a>
    </div>
  </div>
  -->

  

  
  

<!-- End page content -->
</div>

<script>
// Script to open and close sidebar
function w3_open() {
    document.getElementById("mySidebar").style.display = "block";
    document.getElementById("myOverlay").style.display = "block";
}
 
function w3_close() {
    document.getElementById("mySidebar").style.display = "none";
    document.getElementById("myOverlay").style.display = "none";
}
</script>

</body>
</html>